{
  "name": "alpha-video-kit",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:packages": "npm run build -w packages/webgl -w packages/webgpu -w packages/svg",
    "build:demo": "npm run build -w demo",
    "dev": "npm run dev -w demo",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0",
    "@vitest/browser": "^3.0.0",
    "playwright": "^1.48.0"
  },
  "engines": {
    "node": ">=20"
  }
}
